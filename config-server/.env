# ========================================
# Config Server Configuration
# ========================================
CONFIG_IMAGE=ghcr.io/tickatch/config-server:latest

# ========================================
# Git Repository (설정 저장소)
# ========================================
SPRING_CLOUD_CONFIG_SERVER_GIT_URI=https://github.com/tickatch/config-repo
SPRING_CLOUD_CONFIG_SERVER_GIT_DEFAULT_LABEL=main

# ========================================
# RabbitMQ (Bus Refresh용)
# ========================================
SPRING_RABBITMQ_HOST=rabbitmq
SPRING_RABBITMQ_PORT=5672
SPRING_RABBITMQ_USERNAME=tickatch
SPRING_RABBITMQ_PASSWORD=tickatch123

# ========================================
# JVM Options
# ========================================
JAVA_OPTS=-Xms256m -Xmx512m

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO